= render partial: 'overview_header'
#areachart{style: "width:100%; height:500px;"}
:javascript
  $(function () {
      $('#areachart').highcharts({
          chart: {
              type: 'area'
          },
          title: {
              text: ''
          },
          xAxis: {
              categories: #{@months},
              tickmarkPlacement: 'on',
              title: {
                  enabled: false
              }
          },
          yAxis: {
              title: {
                  text: 'Expenses'
              },
              labels: {
                  formatter: function () {
                      return this.value / 1;
                  }
              }
          },
          tooltip: {
              shared: true,
              valueSuffix: ' Euro'
          },
          plotOptions: {
              area: {
                  stacking: 'normal',
                  lineColor: '#666666',
                  lineWidth: 1,
                  marker: {
                      lineWidth: 1,
                      lineColor: '#666666'
                  }
              }
          },
          series: #{@expenses_series_per_category.to_json}
      });
  });